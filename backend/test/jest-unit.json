{
  "displayName": "Unit Tests",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.ts",
    "!src/**/*.e2e-spec.ts",
    "!src/**/*.d.ts",
    "!src/main.ts",
    "!src/database/seeds/**",
    "!src/database/data-source.ts"
  ],
  "coverageDirectory": "coverage/unit",
  "coverageReporters": ["text", "lcov", "html"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/test/setup/unit-setup.ts"],
  "testMatch": [
    "<rootDir>/src/**/*.spec.ts"
  ],
  "moduleNameMapping": {
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}